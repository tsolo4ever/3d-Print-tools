  "stepsPerMmCalculations": {
    "belt": {
      "formula": "(motor_steps * microstepping) / (teeth * pitch)",
      "example_20T_GT2": "(200 * 16) / (20 * 2) = 80 steps/mm"
    },
    "leadscrew": {
      "formula": "(motor_steps * microstepping) / lead",
      "example_T8_8mm": "(200 * 16) / 8 = 400 steps/mm"
    },
    "geared": {
      "formula": "(motor_steps * microstepping * gear_ratio) / (teeth * pitch)",
      "notes": "Add gear ratio to calculation"
    }
