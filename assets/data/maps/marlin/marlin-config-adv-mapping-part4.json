    "manualYHomePos": {
      "mapsFrom": ["MANUAL_Y_HOME_POS"],
      "type": "float",
      "required": false,
      "fileLocation": "Configuration_adv.h",
      "examples": [0]
    },
    
    "manualZHomePos": {
      "mapsFrom": ["MANUAL_Z_HOME_POS"],
      "type": "float",
      "required": false,
      "fileLocation": "Configuration_adv.h",
      "examples": [0]
    },
    
    "bedLevelingBoundsMargin": {
      "mapsFrom": ["BED_LEVELING_INSET_LFRB"],
